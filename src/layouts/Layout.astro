import Footer from "@components/Footer.astro"
interface Props {
	title: string;
	lang: string;
}

const { title, lang } = Astro.props;
console.log(lang)
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Martin' space" />
