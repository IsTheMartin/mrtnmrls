---
interface Props {
  date: Date;
  lang: string;
}

const { date, lang } = Astro.props;

const locale = lang == "es" ? "es-mx" : "en-us";
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(locale, {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  }
</time>
