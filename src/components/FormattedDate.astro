---
interface Props {
	date: Date;
	lang: string;
}

const { date, lang } = Astro.props;
let locale = 'es-mx'
if (lang == 'en') {
	locale = 'en-us'
}
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(locale, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
			timeZone: 'UTC'
		})
	}
</time>